{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-unused-vars": [1, {}],
    "no-fallthrough": "warn",
    "no-constant-condition": ["error", { "checkLoops": false }],
    "prettier/prettier": ["error", { "endOfLine": "auto" }]
  }
}
